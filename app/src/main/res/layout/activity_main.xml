<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:id="@+id/wk_tv"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_margin="12dp"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:id="@+id/res_tv"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_margin="12dp"
        android:padding="10dp"
        android:layout_below="@+id/wk_tv"
        />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentBottom="true"
      android:backgroundTint="#787373"
      android:paddingVertical="20dp"
      android:id="@+id/btn_lay">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="clr"
              android:textColor="@color/white"
              android:id="@+id/btn_clr"
              android:backgroundTint="#F63535"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="10dp"
              android:text="("
              android:textColor="@color/white"
              android:id="@+id/btn_del"
              android:backgroundTint="#FA7979"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="10dp"
              android:text="sin"
              android:textColor="@color/white"
              android:backgroundTint="#FFB300"
              android:id="@+id/btn_sin"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="10dp"
              android:text="cosine"
              android:textColor="@color/white"
              android:backgroundTint="#FFB300"
              android:id="@+id/btn_tan"

              />

      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text=")"
              android:textColor="@color/white"
              android:id="@+id/btn_9"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="10dp"
              android:text="8"
              android:textColor="@color/white"
              android:id="@+id/btn_8"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="20dp"
              android:text="7"
              android:textColor="@color/white"
              android:id="@+id/btn_7"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="10dp"
              android:text="+"
              android:textColor="@color/white"
              android:backgroundTint="#00897B"
              android:id="@+id/btn_pls"

              />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="6"
              android:textColor="@color/white"
              android:id="@+id/btn_6"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="5"
              android:textColor="@color/white"
              android:id="@+id/btn_5"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="4"
              android:textColor="@color/white"
              android:id="@+id/btn_4"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="18dp"
              android:text="Ã—"
              android:textColor="@color/white"
              android:backgroundTint="#00897B"
              android:id="@+id/btn_malt"

              />

      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="3"
              android:textColor="@color/white"
              android:id="@+id/btn_3"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="2"
              android:textColor="@color/white"
              android:id="@+id/btn_2"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="1"
              android:textColor="@color/white"
              android:id="@+id/btn_1"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="/"
              android:textColor="@color/white"
              android:backgroundTint="#00897B"
              android:id="@+id/btn_dev"

              />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="0"
              android:textColor="@color/white"
              android:id="@+id/btn_0"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="15dp"
              android:text="."
              android:textColor="@color/white"

              android:id="@+id/btn_dt"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="AC"
              android:textColor="@color/white"
              android:backgroundTint="#F63535"
              android:id="@+id/btn_ac"

              />
          <com.google.android.material.button.MaterialButton
              android:layout_width="80dp"
              android:layout_height="50dp"
              android:textSize="14dp"
              android:text="="
              android:textColor="@color/white"
              android:id="@+id/btn_eql"
              android:backgroundTint="#00897B"

              />

      </LinearLayout>




  </LinearLayout>



</RelativeLayout>